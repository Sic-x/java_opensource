<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmh.crm.mapper.employee.EmployeeMapper">
    <select id="findAll" resultType="Employee">
        select * from t_employee
    </select>

    <insert id="save" parameterType="Employee">
       insert into t_employee(username,realName,password,tel,email,dept_id,inputTime,state,type,tenant_id)
        values(#{username},#{realName},#{password},#{tel},#{email},#{dept.id},#{inputTime},#{state},#{type}
        ,#{tenant.id})
    </insert>

    <update id="update" parameterType="Employee">
        update t_employee set username=#{username},realName=#{realName},
        password=#{password},
        tel=#{tel},email=#{email},dept_id=#{dept.id},
        inputTime=#{inputTime},
        state=#{state},type=#{type},
        tenant_id=#{tenant.id}
         where id=#{id}
    </update>

    <delete id="remove" parameterType="long" >
        delete from t_employee where id=#{id}
    </delete>
    <select id="findOne" parameterType="long" resultType="Employee">
        select * from t_employee where id=#{id}
    </select>

    <!--getByUsername-->
    <select id="getByUsername" parameterType="string" resultType="Employee">
        select * from t_employee where username=#{username}
    </select>
</mapper>